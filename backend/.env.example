# Database Configuration
# For local development with SQLite (default):
DATABASE_URL=sqlite:///./oriki.db

# For PostgreSQL (production):
# DATABASE_URL=postgresql://user:password@localhost:5432/oriki
# Or for cloud PostgreSQL:
# DATABASE_URL=postgresql://user:password@host:5432/oriki

# OpenAI API - Required for multi-modal processing (Whisper + GPT-4 Vision)
OPENAI_API_KEY=your_openai_api_key_here

# Tavily API - Optional for web search enrichment
TAVILY_API_KEY=your_tavily_api_key_here

# ASI Cloud API (CUDOS) - Required for intelligent keyword extraction
ASI_API_KEY=your_asi_api_key_here
ASI_BASE_URL=https://inference.asicloud.cudos.org/v1
ASI_MODEL=qwen/qwen3-32b

# IPFS Configuration
IPFS_API_URL=/ip4/127.0.0.1/tcp/5001

# CUDOS Network
CUDOS_RPC_URL=https://rpc.cudos.org

# Fetch.ai Configuration
USE_FETCHAI=true
FETCHAI_SEED=oriki_orchestrator_seed_phrase_change_in_production
FETCHAI_PORT=8001